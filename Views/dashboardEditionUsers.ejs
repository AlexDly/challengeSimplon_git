	<body>
		<header>
			<div class="container-fluid">
				<div class="row">
					<div id="imgDiv" class="col-md-6">
						<img src="logo-blanc.png" />
					</div>

					<div class="col-md-6" id="idTitle">
						<span id="adminTitle">Page Edition</span><br>		
					</div>
				</div>
				<hr>
			
			</div>

			

		</header>
		

		<section>
			
		<form method="POST" action="/createOrModifUser">	
			<div id="blocModif" class="container-fluid">
				<div class="row">
					<div class="col-md-12">
						<span>nom</span>
					</div>
				</div>

				<div class="row">
					<div class="col-md-12">
						<input type="text" name="nomUser" placeholder="nom de l'utilisateur">
					</div>
				</div>

				<div class="row">
					<div class="col-md-12">
						<span>email</span>
					</div>
				</div>

				<div class="row">
					<div class="col-md-12">
						<input type="text" name="emailUser" placeholder="email de l'utilisateur">
					</div>
				</div>

				<div class="row">
					<div class="col-md-12">
						<span>mot de passe</span>
					</div>
				</div>

				<div class="row">
					<div class="col-md-12">
						<input type="text" name="mdpUser" placeholder="mot de passe de l'utilisateur">
					</div>
				</div>



				<div class="row">
					<div class="col-md-6">
						<input class="buttn" type="submit" name="submit" value="Valider">
					</div>

					<div class="col-md-6">
						<input type="reset" name="contenuArticle" value="Annuler">
					</div>

					<input type="hidden" name="identifiant">

					<input type="hidden" name="crOrmdf">
				</div>
			</div> 
		</form>

		</section>

		
		<script type="text/javascript">

			console.log('<%=user[0].nom%>')

		//Chargement de la page avec la bd
		if('<%=user%>'=='creation'){
			$('input[type=submit]').val('Creer');
			$('input[name=crOrmdf]').val('create');
		}else{

			$('input[name=nomUser]').val('<%= user[0].nom %>');
			$('input[name=emailUser]').val('<%= user[0].email %>');
			$('input[name=mdpUser]').val('<%= user[0].mdp %>');
			
			$('input[type=submit]').val('Modifier');
			$('input[name=identifiant]').val('<%= user[0]._id %>');
			$('input[name=crOrmdf]').val('modif');
		}
		</script>

	</body>


